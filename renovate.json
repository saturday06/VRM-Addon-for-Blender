{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "schedule:weekends",
    ":automergeAll",
    ":disableDependencyDashboard",
    ":semanticCommitTypeAll(chore)"
  ],
  "minimumReleaseAge": "14 days",
  "lockFileMaintenance": {
    "groupName": "regular dependency updates",
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "regular dependency updates",
      "matchPackageNames": ["*"]
    },
    {
      "matchCategories": ["python"],
      "matchPackageNames": ["python", "bpy"],
      "rangeStrategy": "in-range-only"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^tools/install_nvm.sh$/"],
      "matchStrings": [
        "\"https://raw\\.githubusercontent\\.com/nvm-sh/nvm/(?<currentValue>v\\d+\\.\\d+\\.\\d+)/install\\.sh\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "nvm-sh/nvm"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^tools/install_act.sh$/"],
      "matchStrings": [
        "\"https://github\\.com/nektos/act/releases/download/(?<currentValue>v\\d+\\.\\d+\\.\\d+)/act_Linux_x86_64\\.tar\\.gz\"",
        "\"https://github\\.com/nektos/act/releases/download/(?<currentValue>v\\d+\\.\\d+\\.\\d+)/act_Linux_arm64\\.tar\\.gz\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "nektos/act"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^.dvmrc$/"],
      "matchStrings": ["(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "denoland/deno"
    }
  ]
}
