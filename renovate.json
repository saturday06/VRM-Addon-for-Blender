{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "schedule:weekends",
    ":automergeAll",
    ":disableDependencyDashboard"
  ],
  "minimumReleaseAge": "14 days",
  "lockFileMaintenance": {
    "groupName": "regular dependency updates",
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "regular dependency updates",
      "matchPackageNames": ["*"]
    },
    {
      "matchCategories": ["python"],
      "matchPackageNames": ["python", "bpy"],
      "rangeStrategy": "in-range-only"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^(./)?tools/install_nvm.sh$/"],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/nvm-sh/nvm/(?<currentValue>v\\d+\\.\\d+\\.\\d+)/install\\.sh"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "nvm-sh/nvm"
    }
  ]
}
